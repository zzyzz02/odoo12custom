<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
        <record id="paperformat_a4_no_header" model="report.paperformat">
            <field name="name">A4 No Headere</field>
            <field name="format">A4</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">10</field>
            <field name="margin_bottom">10</field>
            <field name="margin_left">10</field>
            <field name="margin_right">10</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">10</field>
            <field name="dpi">90</field>
        </record>
    </data>


    <report string="KARTU BARANG" id="action_stock_card_report" model="stock.card.report.wizard" report_type="qweb-pdf" name="stock_card_report.stock_card_report" file="stock_card_report.stock_card_report" menu="True" print_report_name="'KARTU BARANG - %s' % (object.product_id.name)" paperformat="stock_card_report.paperformat_a4_no_header" />




    <template id="stock_card_report">

        <t t-call="web.basic_layout">
            <div class="page">
                <style>
            .table td {
                padding: 0px;
                vertical-align: middle;
            }



            .table th {
                padding: 0px;
                vertical-align: middle !important;
                text-align: center;
            }

            .table-bordered td,
            .table-bordered th {
                border: 1px solid black !important;
                padding: 0 5px;
            }
                </style>

                <div class="text-center" style="padding-left: 15px;width: 300px;">
            PERUMDA AIR MINUM <br />
                <span class="font-weight-bold" style="font-size: large;">"TIRTA TAMAN SARI"</span>
                <br />
                <span style="border-bottom: 1px solid black;">KOTA MADIUN</span>
            </div>

            <h4 class="text-center">
            KARTU BARANG
            </h4>

            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>
                            KODE
                        </th>
                        <th>
                            <span style="font-weight:400;" t-esc="product_code" />
                        </th>
                        <th colspan="3">
                            NAMA BARANG : <span style="font-weight:400;" t-esc="product_name" />
                        </th>
                    </tr>
                    <tr>
                        <th>
                    SATUAN
                        </th>
                        <th>
                            <span style="font-weight:400;" t-esc="product_uom" />
                        </th>
                        <th colspan="3">
                            PENJELASAN : <span style="font-weight:400;" t-esc="penjelasan" />
                        </th>

                    </tr>
                    <tr >
                        <th>
                    Tanggal
                        </th>
                        <th>
                    No Bukti
                        </th>
                        <th>
                    Diterima
                        </th>
                        <th>
                    Dikeluarkan
                        </th>
                        <th>
                    Sisa
                        </th>
                    </tr>
                </thead>

                <tr t-foreach="lines" t-as="line">
                    <td>
                        <span t-esc="line['date']" />
                    </td>
                    <td>
                        <span t-esc="line['reference']" />
                    </td>
                    <td>
                        <span t-esc="line['move_in']" />
                    </td>
                    <td>
                        <span t-esc="line['move_out']" />
                    </td>
                    <td>
                        <span t-esc="line['balance_qty']" />
                    </td>
                </tr>
            </table>


        </div>

    </t>
</template>

</odoo>
